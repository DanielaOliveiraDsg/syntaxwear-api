generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(cuid())
  firstName    String
  lastName     String?
  email        String    @unique
  passwordHash String
  phone        String?
  birthDate    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Product {
  id          String       @id @default(cuid())
  name        String
  slug        String       @unique
  description String?
  price       Decimal     @db.Decimal(10, 2)
  currency    String       @default("USD")
  images      String[] // URLs
  sizes       Json?
  colors      Json?
  stock       Int         @default(0)
  active      Boolean     @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}